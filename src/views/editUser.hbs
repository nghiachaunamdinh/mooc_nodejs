
    <div class="container">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
           
            <form class="form-signin" method="POST" action="/home/saveeditUser/{{_id}}?_method=PUT" style="font-size:20px;">
                  <table>
                      <tr>
                          <td colspan="2" style="font-weight: bold;text-align: center;color:blue;">Edit Account</td>
                      </tr>
                      <tr>
                          <td colspan="2" style="text-align: center;">{{error}}</td>
                      </tr>
                    <tr>
                        <td style="font-weight: bold;">
                            Name: 
                        </td>
                        <td>
                            <input type="text"  class="form-control"  name="name" required style="font-size:15px;margin-top:10px;width:500px;" value="{{name}}">
                        </td>
                    </tr>
                     <tr>
                        <td style="font-weight: bold;">
                            Phone :  
                        </td>
                        <td>
                             <input type="tel" class="form-control"  name="phone" required style="font-size:15px;margin-top:10px;" value="{{phone}}" pattern="[0-9]{10}">
                        </td>
                    </tr>
                     <tr>
                        <td style="font-weight: bold;">
                            Gmail : 
                        </td>
                        <td>
                            <input type="Gmail" class="form-control"  name="gmail" required style="font-size:15px;margin-top:10px;" value="{{gmail}}">
                        </td>
                    </tr>
                     <tr>
                        <td style="font-weight: bold;">
                            Possion : 
                        </td>
                        <td>
                            <select class="form-select" aria-label="Disabled select example" name="possion" required style="font-size:15px;margin-top:10px;">
                                <option value="1">Is user</option>
                                <option value="2">Is admin</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" style="text-align: center;">
                            <button class="btn btn-lg btn-primary btn-block btn-signin" type="submit" name="dangky" style="font-size:15px;margin-top:10px;">Save Question</button>
                        </td>
                    </tr>
                  </table>
               
            </form><!-- /form -->
        </div>
        <div class="col-md-2"></div>
    </div>
    </div>




 